<h1>New Blog Post</h1>

<%= form_with model: @blog_post, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit "Create Blog post" %>
  </div>
<% end %>
